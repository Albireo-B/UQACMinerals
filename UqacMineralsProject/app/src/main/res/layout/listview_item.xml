<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vert_uqac"
    android:layout_marginBottom="20dp"
    android:layout_marginTop="20dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/listViewItem_mineralImage"
        android:layout_gravity="center"
        android:contentDescription="@string/ImageQuartz"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/quartz_png_11553949529yvckglmqth_removebg_preview"/>

    <TextView
        android:id="@+id/listViewItem_mineralName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Mineral Name"
        android:textColor="@color/black" />


</LinearLayout>